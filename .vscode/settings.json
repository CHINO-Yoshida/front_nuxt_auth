{
    "editor.formatOnSave": true,
    "css.validate": true,
    "scss.validate": true,
    "editor.defaultFormatter": "esbenp.prettier-vscode",
    "[css,scss]": {
        "editor.defaultFormatter": "esbenp.prettier-vscode",
        "editor.codeActionsOnSave": {
            "source.fixAll.stylelint": "always"
        }
    },
    "prettier.configPath": "./.prettierrc.mjs",
    "prettier.useEditorConfig": false,
    "[javascript]": {
        "editor.defaultFormatter": "esbenp.prettier-vscode"
    },
    "[vue]": {
        "editor.defaultFormatter": "esbenp.prettier-vscode"
    }
}
